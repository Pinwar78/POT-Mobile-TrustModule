<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="8dp">

    <agency.tango.android.avatarview.views.AvatarView
        android:id="@+id/contact_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        app:av_border_color="@android:color/white"
        app:av_border_width="4dp"
        app:av_text_size_percentage="35" />

    <TextView
        android:id="@+id/text_message_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Process of Things"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/contact_avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:background="@drawable/rounded_rectangle_blue"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:text="hi, how r u today"
        android:textColor="@color/White"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/contact_avatar"
        app:layout_constraintTop_toBottomOf="@id/text_message_sender" />
    <TextView
        android:id="@+id/text_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11:40"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/text_message_body"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@id/text_message_body"/>

</android.support.constraint.ConstraintLayout>